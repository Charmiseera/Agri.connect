# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/agri-connect
# For production use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/agri-connect

# Server Configuration
PORT=5000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=30d

# Cloudinary Configuration (for image uploads)
CLOUD=your_cloudinary_cloud_name
API_KEY=your_cloudinary_api_key
API_SECRET=your_cloudinary_api_secret

# Google Cloud Speech API (OPTIONAL - requires billing)
# Note: google-credentials.json file should be in server folder
# GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json
# If not available, browser-based Web Speech API will be used instead

# Node Environment
# Use 'development' for local development, 'production' for deployment
NODE_ENV=production
